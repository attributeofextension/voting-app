<div class="container-fluid middle signupForm">
{{#if message}}<small class="form-text text-muted alert"><i class="fa fa-exclamation"></i>  {{message}}</p></small>{{/if}}
<form method="post" action="/signup/" id="signup_form" enctype="application/x-www-form-urlencoded">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="signupName" name="name" placeholder="Jane" required>
    </div>
    <div class="form-group">
        <label for="email">Email address</label>
        <input type="email" class="form-control" id="signupEmail" name="email" placeholder="Enter email" required>
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
      </div>
  <fieldset>
  <div class="form-group">
    <label for="password">Password</label>
    <input type="password" class="form-control" id="password" name="password" placeholder="Password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required>
    <small id="emailHelp" class="form-text text-muted">Must be at least 8 characters containing at least one number and one uppercase letter</small>
  </div>
  <div class="form-group">
    <label for="confirm_password">Confirm Password</label>
    <input type="password" class="form-control" id="confirm_password" name="confirm_password" placeholder="Password" required>
  </div>
  </fieldset>
  <button type="submit" class="btn btn-success" id="submitBtn">Sign up</button>
</form>
</div>
<script src="/scripts/signup.js"></script>